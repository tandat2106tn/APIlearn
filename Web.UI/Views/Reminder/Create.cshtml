@model TaskManagerMVC.ViewModels.CreateReminderViewModel

@{
    ViewData["Title"] = "Create Reminder";
}

<div class="container">
    <h1 class="mt-4">Create New Reminder</h1>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Message" class="form-label"></label>
            <textarea asp-for="Message" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ReminderTime" class="form-label"></label>
            <input asp-for="ReminderTime" class="form-control" type="datetime-local" />
            <span asp-validation-for="ReminderTime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TodoTaskId" class="form-label">Related Task</label>
            <select asp-for="TodoTaskId" class="form-select" asp-items="ViewBag.Tasks"></select>
            <span asp-validation-for="TodoTaskId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}