@page
@model TaskManager.Web.Pages.Tasks.IndexModel
@{
    ViewData["Title"] = "Tasks";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Type</th>
            <th>Difficulty</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tasks)
        {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.DueDate.ToShortDateString()</td>
                    <td>@(item.IsCompleted ? "Completed" : "Pending")</td>
                    <td>@item.TaskTypeName</td>
                    <td>@item.TaskDifficultyName</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>