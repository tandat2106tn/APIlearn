@model TaskManager.Web.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.IsCompleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.IsCompleted)
